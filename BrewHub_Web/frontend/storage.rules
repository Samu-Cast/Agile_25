rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images for posts
    match /posts/{imageId} {
      allow read: if true;  // Everyone can view
      allow write: if request.auth != null;  // Only logged-in users can upload
    }
    
    // Profile pictures
    match /profiles/{userId}/{imageId} {
      allow read: if true;  // Everyone can view
      allow write: if request.auth != null && request.auth.uid == userId;  // Only owner can upload
    }
    
    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
